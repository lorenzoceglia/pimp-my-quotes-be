{
  "name": "turbocover-backend",
  "version": "1.0.0",
  "description": "Backend for TurboCover MP3 art service",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "db:generate": "dotenv -e .env.development -- prisma generate",
    "db:push": "dotenv -e .env.development -- prisma db push",
    "db:studio": "dotenv -e .env.development -- prisma studio",
    "db:migrate": "dotenv -e .env.development -- prisma migrate dev",
    "postinstall": "prisma generate"
  },
  "engines": {
    "node": ">=18.12"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "@supabase/supabase-js": "^2.89.0",
    "@types/dotenv": "^8.2.3",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-validator": "^7.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/node": "^22.19.3",
    "dotenv-cli": "^8.0.0",
    "prisma": "^6.19.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
